<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/top_background2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <TextView
        android:id="@+id/txt_activity_main_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:text="Create Account"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edt_activity_main_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/name"
        android:drawablePadding="20px"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:padding="8px"
        android:paddingTop="20px"
        android:paddingBottom="20dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_activity_main_title"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/edt_activity_main_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="20px"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="8px"
        android:paddingTop="20px"
        android:paddingBottom="20dp"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_activity_main_title"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edt_activity_main_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="20px"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8px"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_activity_main_email"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="58dp"
        android:layout_height="53dp"
        app:srcCompat="@drawable/btn_arrow2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="337dp"
        tools:layout_editor_absoluteY="625dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Forgot Password? Recover it"
        android:textColor="#0000cc"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="688dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>